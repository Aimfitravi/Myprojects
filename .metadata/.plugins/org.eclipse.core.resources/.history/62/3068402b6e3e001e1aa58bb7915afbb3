package com.shopx.dao;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

import com.shopx.entities.CartItem;
import com.shopx.entities.User;

public interface CartDao extends JpaRepository<CartItem, Long>{

	List<CartItem> findByUser(User user);
	
	@Query(value="select * from cart_items where customer_id=?1",nativeQuery = true)
	   List<CartItem> getAllCartItemsByCustomerId(Long id);

}
