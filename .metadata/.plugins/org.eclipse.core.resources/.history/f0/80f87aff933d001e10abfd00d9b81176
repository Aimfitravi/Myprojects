package com.shopx.service;

import java.util.List;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.shopx.dao.OrderDao;
import com.shopx.dto.OrderRequestDTO;
import com.shopx.entities.Order;

@Service
@Transactional
public class OrderServiceImpl implements OrderService {

	@Autowired
	private OrderDao dao;
	
	@Autowired
	private CustomerService customerService;
	
	@Autowired
	private ProductService productService;
	
	@Override
	public List<Order> getAllOrders() {
		return dao.findAll();
	}

	@Override
	public Order getOrderByCustomerId(Long custId) {		
		return dao.findById(custId).orElseThrow();
	}

	@Override
	public Order addNewOrderItem(OrderRequestDTO order) {
		
		customerService.getCustomerById(order.getCustomerId());
		productService.getProductById(order.getProductId())
		
		return dao.save(order);
	}

}
